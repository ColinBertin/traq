<div data-mapbox-target="location" data-location-id="<%= location.id %>" class="card-blue-shadow mb-4 p-4">
  <small><%= location.location_type%></small>
  <h2><%= location.name %></h2>
  <p><%= location.address%></p>
  <div class="contri-card contributions p-3">
    <p class="mint-green-text">SUPPLIES AVAILABLE</p>
    <% location.contributions.each do |contribution| %>
      <div class="contri-card-mint mt-2 p-2">
        <div class="d-flex flex-row">
          <small class="text-success"><strong><%= contribution.quantity ? contribution.quantity : 'Unknown' %></strong></small>
          &nbsp
          <small class="text-success"><strong><%= contribution.supply_type %></strong></small>
        </div>
        <p><%#= contribution.description %></p>
      </div>
    <% end %>
  </div>
  <%= link_to '', location_path(location), class: 'card-link' %>
  <p class="distance"></p>
</div>
<% if user_signed_in? && location.user == current_user %>
  <%= link_to location_path(location),
            class: "text-danger cards-delete-btn",
            method: :delete,
            data: { confirm: "Are you sure you would like to delete this location?" } do %>
    <i class="fas fa-times"></i>
  <% end %>
<% end %>
