<div class="contri-user mt-4 p-2 mb-2">
  <div class="border-bottom mt-3 mb-3">
    <small><%= contribution.location.location_type %></small>
    <h2><%= contribution.location.name %></h2>
    <small class="text-success">Your Contribution</small>
    <div class="contri-card-mint p-1">
      <%= render "locations/supplies_kind", contribution: contribution %>
      <div class="d-flex flex-row">
        <small class="text-uppercase text-success"><strong>&nbsp<%= contribution.quantity ? contribution.quantity : 'Unknown' %></strong>,&nbsp</small>
        <p><%= contribution.description %></p>
      </div>
    </div>
  </div>
  <div class="d-flex ">
    <%= link_to edit_contribution_path(contribution), class: "text-decoration-none" do%>
      <p><i class="fas fa-edit"></i> Edit Contribution</p>
    <%end%>
    &nbsp
    &nbsp
    <%= link_to contribution_path(contribution),
    method: :delete,
    data: { confirm: "Do you want to delete this contribution?"},
    class: "text-decoration-none text-danger" do%>
      <p><i class="fas fa-times"></i> Delete Contribution</p>
    <%end%>
  </div>
</div>
