<div class="contri-user mt-4 p-2 mb-2">
  <div class="border-bottom mt-3 mb-3">
    <small><%= location.location_type %></small>
    <h2><%= location.name %></h2>
    <small class="text-success">Your Contribution</small>
    <% location.contributions.each do |contribution| %>
      <div class="contri-card-mint p-1">
        <small class="text-uppercase"><strong><%= contribution.supply_type %>, </strong></small>
        <small class="text-uppercase"><strong><%= contribution.quantity ? contribution.quantity : 'Unknown' %></strong></small>
        <p><%= contribution.description%></p>
      </div>
    </div>
    <div class="d-flex ">
      <%= link_to edit_contribution_path(contribution), class: "text-decoration-none" do%>
        <p><i class="fas fa-edit"></i> Edit</p>
      <%end%>
      &nbsp
      &nbsp
      <%= link_to new_location_contribution_path([location, contribution]), class: "text-decoration-none" do%>
        <p><i class="fas fa-edit"></i> Add </p>
      <%end%>
      &nbsp
      &nbsp
      <%= link_to contribution_path(contribution),
    method: :delete,
    data: { confirm: "Do you want to delete this contribution?"},
    class: "text-decoration-none text-danger" do%>
        <p><i class="fas fa-times"></i> Delete</p>
      <%end%>
    </div>
  <% end %>
</div>
