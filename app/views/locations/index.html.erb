<div class="container px-4"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-userPosition-value="<%= @user.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  <div style="width: 100%; height: 400px; border-radius: 8px; box-shadow: 2px 2px 10px #d0e1ff;"
  data-mapbox-target="map">
  </div>
  <%#= link_to 'Add location', new_location_path %>
  <div class="locations_card mt-4 testWrapper">
    <% @locations.each do |location| %>
      <%= render "locations/card", location: location %>
    <% end %>
  </div>
</div>
