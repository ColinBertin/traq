<% if @checkin.new_record? %>
  <%= simple_form_for([@location, @checkin], remote: true) do |f| %>
    <%= f.submit 'Check in', class:"btn btn-flat ps-4 pe-4 ms-3" %>
  <% end %>
<% else %>
  <%= link_to 'Check out', checkin_path(@checkin),
          class: "btn btn-flat ps-4 pe-4 ms-3",
          method: :delete,
          remote: true %>
<% end %>
